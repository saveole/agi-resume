---
import { motion } from "framer-motion";
---

<section id="experience" class="py-20 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
      Work Experience
    </h2>
    
    <div class="relative">
      <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gray-200 dark:bg-gray-700"></div>
      
      <div class="space-y-12">
        <!-- Tech Company -->
        <div class="relative">
          <div class="flex items-center">
            <div class="flex-1 text-right pr-8">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Senior Software Engineer</h3>
              <p class="text-primary-600 dark:text-primary-400">Leading Tech Company</p>
              <p class="text-gray-600 dark:text-gray-400">2021 - Present</p>
            </div>
            <div class="w-4 h-4 bg-primary-600 rounded-full"></div>
            <div class="flex-1 pl-8">
              <ul class="list-disc text-gray-600 dark:text-gray-400 ml-4">
                <li>Led development of microservices architecture</li>
                <li>Improved system performance by 40%</li>
                <li>Mentored junior developers</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Startup -->
        <div class="relative">
          <div class="flex items-center">
            <div class="flex-1 text-right pr-8">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Full-stack Developer</h3>
              <p class="text-primary-600 dark:text-primary-400">Innovative Startup</p>
              <p class="text-gray-600 dark:text-gray-400">2019 - 2021</p>
            </div>
            <div class="w-4 h-4 bg-primary-600 rounded-full"></div>
            <div class="flex-1 pl-8">
              <ul class="list-disc text-gray-600 dark:text-gray-400 ml-4">
                <li>Built scalable web applications</li>
                <li>Implemented CI/CD pipelines</li>
                <li>Reduced deployment time by 60%</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Agency -->
        <div class="relative">
          <div class="flex items-center">
            <div class="flex-1 text-right pr-8">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Frontend Specialist</h3>
              <p class="text-primary-600 dark:text-primary-400">Creative Agency</p>
              <p class="text-gray-600 dark:text-gray-400">2018 - 2019</p>
            </div>
            <div class="w-4 h-4 bg-primary-600 rounded-full"></div>
            <div class="flex-1 pl-8">
              <ul class="list-disc text-gray-600 dark:text-gray-400 ml-4">
                <li>Developed responsive web interfaces</li>
                <li>Optimized website performance</li>
                <li>Collaborated with design team</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>